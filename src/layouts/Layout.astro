        <p class="text-gray-500 text-sm">{t(lang, 'footer.copyright')}</p>
      </div>
    </footer>
    <div class="fixed bottom-1 right-2 text-[10px] text-gray-300 pointer-events-none select-none">{buildId}</div>

    <UsageBar client:load />

    <!-- Floating bug report button ‚Äî inline styles guarantee visibility regardless of CSS load order -->
    <a
      id="feedback-btn"
      href={FEEDBACK_FORM_URL}
      target="_blank"
      rel="noopener noreferrer"
      style="position:fixed;bottom:1.5rem;left:1.5rem;z-index:9999;display:flex;align-items:center;justify-content:center;width:3rem;height:3rem;background:#1f2937;border-radius:9999px;box-shadow:0 10px 15px -3px rgba(0,0,0,.1);text-decoration:none;transition:transform .15s;"
      title={t(lang, 'header.report')}
      aria-label={t(lang, 'header.report')}
      onmouseover="this.style.transform='scale(1.1)';this.style.background='#374151'"
      onmouseout="this.style.transform='scale(1)';this.style.background='#1f2937'"
    >
      <span style="font-size:1.125rem;line-height:1;">üêõ</span>
    </a>

    <script is:inline>
      (function() {
        var btn = document.getElementById('feedback-btn');
        if (btn) {
          btn.addEventListener('click', function(e) {
            e.preventDefault();
            var base = btn.getAttribute('href');
            var page = encodeURIComponent(window.location.pathname);
            window.open(base + '?entry.1677210818=' + page, '_blank');
          });
        }
      })();
    </script>
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
</style>
