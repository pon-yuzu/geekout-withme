        <div class="flex justify-center items-center gap-4 mb-3 text-sm">
          <a href="/contact" class="text-gray-400 hover:text-orange-500 transition-colors">{t(lang, 'footer.contact')}</a>
          <span class="text-gray-300">|</span>
          <a href="/terms" class="text-gray-400 hover:text-orange-500 transition-colors">{t(lang, 'footer.terms')}</a>
          <span class="text-gray-300">|</span>
          <a href="/privacy" class="text-gray-400 hover:text-orange-500 transition-colors">{t(lang, 'footer.privacy')}</a>
          <span class="text-gray-300">|</span>
          <a href="/legal" class="text-gray-400 hover:text-orange-500 transition-colors">{t(lang, 'footer.legal')}</a>
