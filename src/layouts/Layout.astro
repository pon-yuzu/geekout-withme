---
import UserMenu from '../components/auth/UserMenu.tsx';
import LanguageToggle from '../components/LanguageToggle.tsx';
import LanguageSelector from '../components/LanguageSelector.tsx';
import UsageBar from '../components/UsageBar.tsx';
import { t } from '../i18n/index';
import type { Lang } from '../i18n/index';
import { isPromoActive } from '../lib/promo';

interface Props {
  title: string;
  description?: string;
  user?: { email?: string; user_metadata?: { display_name?: string } } | null;
}

const lang = Astro.locals.lang as Lang;
const hasLangCookie = Astro.request.headers.get('cookie')?.includes('lang=');
const buildId = __BUILD_ID__;
const FEEDBACK_FORM_URL = 'https://docs.google.com/forms/d/e/1FAIpQLSdQJcfpioXMYeeGm5ezhSpM4f5OMsem9RIHdb1xG3KvQKR6Dg/viewform';

const { title, description = "Find your language level, discover resources, and connect with fellow language geeks!", user } = Astro.props;
const promoActive = isPromoActive();
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Geek Out With Me</title>

    <!-- Favicon -->
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />

    <!-- Apple Touch Icon -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

    <!-- PWA Manifest -->
    <link rel="manifest" href="/manifest.json" />

    <!-- Theme Color -->
    <meta name="theme-color" content="#F97316" />

    <!-- OGP -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={`${title} | Geek Out With Me`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://geekout-withme.pages.dev/ogp-1200x630.png" />
    <meta property="og:url" content="https://geekout-withme.pages.dev" />
    <meta property="og:site_name" content="Geek out with Me!" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${title} | Geek Out With Me`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://geekout-withme.pages.dev/ogp-1200x630.png" />

    <script is:inline>if(!globalThis.process)globalThis.process={env:{NODE_ENV:"production"},browser:true,version:""};</script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  </head>
  <body class="min-h-screen bg-orange-50 text-gray-800">
    {!hasLangCookie && (
      <LanguageSelector client:load />
    )}

    <nav class="fixed top-0 w-full bg-white/90 backdrop-blur-md z-50 border-b border-orange-100 shadow-sm">
      <div class="max-w-6xl mx-auto px-4 py-4 flex justify-between items-center">
        <a href="/" class="text-xl font-bold text-orange-500 whitespace-nowrap">
          Geek Out With Me
        </a>

        <!-- Desktop nav -->
        <div class="hidden md:flex items-center gap-6">
          <a href="/level-check" class="text-gray-600 hover:text-orange-500 transition-colors">{t(lang, 'nav.levelCheck')}</a>

          <!-- Learn dropdown -->
          <div class="relative group">
            <button class="text-gray-600 hover:text-orange-500 transition-colors flex items-center gap-1">
              {t(lang, 'nav.learn')}
              <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
            </button>
            <div class="absolute top-full left-0 pt-2 hidden group-hover:block">
              <div class="bg-white border border-orange-100 rounded-xl shadow-lg py-2 min-w-[180px]">
                <a href="/resources" class="block px-4 py-2 text-gray-600 hover:text-orange-500 hover:bg-orange-50 transition-colors">{t(lang, 'nav.resources')}</a>
                <a href="/conversation-cards" class="block px-4 py-2 text-gray-600 hover:text-orange-500 hover:bg-orange-50 transition-colors">{t(lang, 'nav.convCards')}</a>
                <a href="/workbook" class="block px-4 py-2 text-gray-600 hover:text-orange-500 hover:bg-orange-50 transition-colors">{t(lang, 'nav.workbook')}</a>
              </div>
            </div>
          </div>

          <!-- Practice dropdown -->
          <div class="relative group">
            <button class="text-gray-600 hover:text-orange-500 transition-colors flex items-center gap-1">
              {t(lang, 'nav.practice')}
              <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
            </button>
            <div class="absolute top-full left-0 pt-2 hidden group-hover:block">
              <div class="bg-white border border-orange-100 rounded-xl shadow-lg py-2 min-w-[180px]">
                <a href="/community" class="block px-4 py-2 text-gray-600 hover:text-orange-500 hover:bg-orange-50 transition-colors">{t(lang, 'nav.community')}</a>
                <a href="/voice-lounge" class="block px-4 py-2 text-gray-600 hover:text-orange-500 hover:bg-orange-50 transition-colors">{t(lang, 'nav.voiceLounge')}</a>
              </div>
            </div>
          </div>

          <!-- More dropdown -->
          <div class="relative group">
            <button class="text-gray-600 hover:text-orange-500 transition-colors flex items-center gap-1">
              {t(lang, 'nav.more')}
              <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
            </button>
            <div class="absolute top-full right-0 pt-2 hidden group-hover:block">
              <div class="bg-white border border-orange-100 rounded-xl shadow-lg py-2 min-w-[180px]">
                <a href="/services" class="block px-4 py-2 text-gray-600 hover:text-orange-500 hover:bg-orange-50 transition-colors">{t(lang, 'nav.services')}</a>
                <a href="/links" class="block px-4 py-2 text-gray-600 hover:text-orange-500 hover:bg-orange-50 transition-colors">{t(lang, 'nav.links')}</a>
                <a href="/contact" class="block px-4 py-2 text-gray-600 hover:text-orange-500 hover:bg-orange-50 transition-colors">{t(lang, 'nav.contact')}</a>
              </div>
            </div>
          </div>

          <LanguageToggle lang={lang} client:load />
          {promoActive && user && (
            <span class="text-[10px] font-semibold px-2 py-0.5 bg-amber-100 text-amber-700 rounded-full border border-amber-300 whitespace-nowrap">
              {t(lang, 'promo.badge')}
            </span>
          )}
          {user ? (
            <UserMenu client:load email={user.email || ''} displayName={user.user_metadata?.display_name} />
          ) : (
            <div class="flex items-center gap-3">
              <a href="/login" class="text-sm font-medium text-gray-600 hover:text-orange-500 transition-colors">{t(lang, 'nav.login')}</a>
              <a href="/signup" class="text-sm font-medium px-4 py-2 bg-orange-500 text-white rounded-full hover:bg-orange-600 transition-colors">{t(lang, 'nav.signup')}</a>
            </div>
          )}
        </div>

        <!-- Mobile: user menu + hamburger -->
        <div class="flex items-center gap-2 md:hidden">
          {promoActive && user && (
            <span class="text-[9px] font-semibold px-1.5 py-0.5 bg-amber-100 text-amber-700 rounded-full border border-amber-300 whitespace-nowrap hidden sm:inline-block">
              {t(lang, 'promo.badge')}
            </span>
          )}
          <LanguageToggle lang={lang} client:load />
          {user && (
            <UserMenu client:load email={user.email || ''} displayName={user.user_metadata?.display_name} />
          )}
          <button id="mobile-menu-btn" class="p-2 text-gray-600 hover:text-orange-500" aria-label="Menu">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>

      <!-- Mobile dropdown -->
      <div id="mobile-menu" class="hidden md:hidden border-t border-orange-100 bg-white">
        <div class="px-4 py-3 space-y-1">
          <a href="/level-check" class="block text-gray-600 hover:text-orange-500 transition-colors py-2">{t(lang, 'nav.levelCheck')}</a>
          <p class="text-xs font-semibold text-gray-400 uppercase tracking-wide pt-3 pb-1">{t(lang, 'nav.learn')}</p>
          <a href="/resources" class="block text-gray-600 hover:text-orange-500 transition-colors py-2 pl-3">{t(lang, 'nav.resources')}</a>
          <a href="/conversation-cards" class="block text-gray-600 hover:text-orange-500 transition-colors py-2 pl-3">{t(lang, 'nav.convCards')}</a>
          <a href="/workbook" class="block text-gray-600 hover:text-orange-500 transition-colors py-2 pl-3">{t(lang, 'nav.workbook')}</a>
          <p class="text-xs font-semibold text-gray-400 uppercase tracking-wide pt-3 pb-1">{t(lang, 'nav.practice')}</p>
          <a href="/community" class="block text-gray-600 hover:text-orange-500 transition-colors py-2 pl-3">{t(lang, 'nav.community')}</a>
          <a href="/voice-lounge" class="block text-gray-600 hover:text-orange-500 transition-colors py-2 pl-3">{t(lang, 'nav.voiceLounge')}</a>
          <div class="border-t border-orange-100 mt-2 pt-2">
            <a href="/services" class="block text-gray-600 hover:text-orange-500 transition-colors py-2">{t(lang, 'nav.services')}</a>
            <a href="/links" class="block text-gray-600 hover:text-orange-500 transition-colors py-2">{t(lang, 'nav.links')}</a>
            <a href="/contact" class="block text-gray-600 hover:text-orange-500 transition-colors py-2">{t(lang, 'nav.contact')}</a>
          </div>
          {!user && (
            <div class="flex items-center gap-3 pt-2 border-t border-orange-100">
              <a href="/login" class="text-sm font-medium text-gray-600 hover:text-orange-500 transition-colors">{t(lang, 'nav.login')}</a>
              <a href="/signup" class="text-sm font-medium px-4 py-2 bg-orange-500 text-white rounded-full hover:bg-orange-600 transition-colors">{t(lang, 'nav.signup')}</a>
            </div>
          )}
        </div>
      </div>
    </nav>

    <script is:inline>
      document.getElementById('mobile-menu-btn')?.addEventListener('click', () => {
        const menu = document.getElementById('mobile-menu');
        const icon = document.getElementById('menu-icon');
        const open = menu?.classList.toggle('hidden');
        if (icon) {
          icon.setAttribute('d', open
            ? 'M4 6h16M4 12h16M4 18h16'
            : 'M6 18L18 6M6 6l12 12');
        }
      });
    </script>

    <main class="pt-20">
      <slot />
    </main>

    <footer class="border-t border-orange-100 mt-20 py-10">
      <div class="max-w-6xl mx-auto px-4 text-center">
        <div class="flex justify-center items-center gap-5 mb-4">
