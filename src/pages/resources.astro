---
import Layout from '../layouts/Layout.astro';
import { ResourceLibrary } from '../components/ResourceLibrary';
import { t } from '../i18n/index';
import type { Lang } from '../i18n/index';

const user = Astro.locals.user;
const lang = Astro.locals.lang as Lang;
---

<Layout title={t(lang, 'resources.title')} description="Free Japanese and English learning resources for all levels." user={user}>
  <section class="py-12 px-4">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-10">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">
          <span class="text-orange-500">
            {t(lang, 'resources.title')}
          </span>
        </h1>
        <p class="text-xl text-gray-600">
          {t(lang, 'resources.subtitle')}
        </p>
      </div>

      <ResourceLibrary client:load lang={lang} />

      <!-- CTA -->
      <div class="mt-16 text-center bg-orange-50 rounded-3xl p-12 border border-orange-100 shadow-sm">
        <h2 class="text-2xl font-bold mb-4 text-gray-800">{t(lang, 'resources.cta.title')}</h2>
        <p class="text-gray-600 mb-6">
          {t(lang, 'resources.cta.desc')}
        </p>
        <a
          href="/level-check"
          class="inline-block px-8 py-4 bg-orange-500 text-white rounded-full font-semibold hover:bg-orange-600 transition-colors"
        >
          {t(lang, 'resources.cta.button')}
        </a>
      </div>
    </div>
  </section>
</Layout>
