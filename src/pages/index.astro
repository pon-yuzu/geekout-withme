  <script is:inline>
  (function() {
    var INTERVAL = 5000;
    var slider = document.getElementById('hero-slider');
    if (!slider) return;
    var slides = slider.querySelectorAll('.hero-slide');
    var dots = slider.querySelectorAll('.hero-dot');
    var dotColors = ['bg-orange-500','bg-teal-500','bg-violet-500','bg-sky-500'];
    var total = slides.length;
    var current = 0;
    var timer;
    var paused = false;

    function goTo(idx) {
      slides[current].classList.remove('opacity-100');
      slides[current].classList.add('opacity-0','pointer-events-none');
      dots[current].className = 'hero-dot w-3 h-3 rounded-full bg-gray-300 transition-all duration-300 hover:bg-gray-400';
      current = idx;
      slides[current].classList.remove('opacity-0','pointer-events-none');
      slides[current].classList.add('opacity-100');
      dots[current].className = 'hero-dot w-3 h-3 rounded-full ' + dotColors[current] + ' transition-all duration-300 scale-125';
    }

    function next() { goTo((current + 1) % total); }
    function start() { timer = setInterval(function(){ if(!paused) next(); }, INTERVAL); }

    dots.forEach(function(dot, i) {
      dot.addEventListener('click', function() { goTo(i); clearInterval(timer); start(); });
    });

    slider.addEventListener('mouseenter', function() { paused = true; });
    slider.addEventListener('mouseleave', function() { paused = false; });

    // Touch swipe support
    var touchStartX = 0;
    slider.addEventListener('touchstart', function(e) { touchStartX = e.changedTouches[0].screenX; }, {passive:true});
    slider.addEventListener('touchend', function(e) {
      var diff = e.changedTouches[0].screenX - touchStartX;
      if (Math.abs(diff) > 50) {
        goTo(diff < 0 ? (current+1)%total : (current-1+total)%total);
        clearInterval(timer); start();
      }
    }, {passive:true});

    start();
  })();
  </script>

