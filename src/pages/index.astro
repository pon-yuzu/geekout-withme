---
import Layout from '../layouts/Layout.astro';
import { t } from '../i18n/index';
import type { Lang } from '../i18n/index';
import { DAILY_LIMITS } from '../lib/quota';
import { isPromoActive } from '../lib/promo';

const user = Astro.locals.user;
const lang = Astro.locals.lang as Lang;

// Fetch daily usage for quota display
let levelCheckUsed = 0;
let workbookUsed = 0;
const supabase = Astro.locals.supabase;
if (supabase) {
  try {
    const { data } = await supabase.rpc('get_daily_usage');
    const row = Array.isArray(data) ? data[0] : data;
    levelCheckUsed = row?.level_check ?? 0;
    workbookUsed = row?.workbook ?? 0;
  } catch {}
}
const levelCheckLimit = DAILY_LIMITS.level_check;
const workbookLimit = DAILY_LIMITS.workbook;
const levelCheckRemaining = Math.max(0, levelCheckLimit - levelCheckUsed);
const workbookRemaining = Math.max(0, workbookLimit - workbookUsed);
const promoActive = isPromoActive();
---

<Layout title="Home" user={user}>
  {/* Promo banner */}
  {promoActive && !user && (
    <div class="bg-gradient-to-r from-orange-500 to-amber-500 text-white text-center px-4 py-3">
      <div class="max-w-4xl mx-auto flex flex-col sm:flex-row items-center justify-center gap-3">
        <p class="text-sm sm:text-base font-medium">
          üéâ {t(lang, 'promo.banner')}
        </p>
        <a
          href="/signup"
          class="inline-block px-5 py-1.5 bg-white text-orange-600 rounded-full text-sm font-semibold hover:bg-orange-50 transition-colors whitespace-nowrap"
        >
          {t(lang, 'promo.bannerCta')}
        </a>
      </div>
    </div>
  )}

  <!-- Section 1: Hero ‚Äî Main CTA -->
  <section class="min-h-[80vh] flex items-center justify-center px-4">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-5xl md:text-7xl font-bold mb-6">
        <span class="text-orange-500">
          {t(lang, 'home.hero.title1')}
        </span>
        <br />
        <span class="text-gray-800">{t(lang, 'home.hero.title2')}</span>
      </h1>

      <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
        {t(lang, 'home.hero.subtitle')}
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/level-check"
          class="px-8 py-4 bg-orange-500 text-white rounded-full font-semibold text-lg hover:bg-orange-600 transition-colors"
        >
          {t(lang, 'home.hero.ctaLevel')}
        </a>
        <a
          href="/resources"
          class="px-8 py-4 border border-orange-500 text-orange-500 rounded-full font-semibold text-lg hover:bg-orange-50 transition-colors"
        >
          {t(lang, 'home.hero.ctaResources')}
        </a>
      </div>
    </div>
  </section>

  <!-- Section 2: Learn ‚Äî Self-study Resources -->
  <section class="py-20 px-4 bg-orange-50 relative overflow-hidden">
    <div class="absolute -top-10 -left-10 w-48 h-48 bg-teal-200 rounded-full opacity-20 pointer-events-none"></div>
    <div class="absolute -bottom-10 -right-10 w-64 h-64 bg-teal-100 rounded-full opacity-25 pointer-events-none"></div>
    <div class="max-w-6xl mx-auto relative z-10">
      <h2 class="text-3xl font-bold text-center mb-12 text-gray-800">
        <span class="border-b-4 border-teal-400 pb-2">{t(lang, 'home.learn.title')}</span>
      </h2>

      <div class="grid md:grid-cols-2 gap-8">
        <!-- Level Check -->
        <div class="bg-white border border-gray-200 rounded-2xl p-8 shadow-sm hover:shadow-md hover:border-teal-300 transition-all">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-14 h-14 bg-teal-50 border border-teal-200 rounded-full flex items-center justify-center text-2xl">üéØ</div>
            <div>
              <h3 class="text-xl font-semibold text-gray-800">{t(lang, 'home.learn.levelCheck.title')}</h3>
              <span class="inline-block text-xs font-medium px-2 py-0.5 bg-teal-100 text-teal-700 rounded-full">{t(lang, 'home.learn.levelCheck.badge')}</span>
            </div>
          </div>
          <p class="text-gray-500 mb-4">
            {t(lang, 'home.learn.levelCheck.desc')}
          </p>
          {levelCheckRemaining > 0 ? (
            <p class="text-sm text-teal-600 font-medium mb-4">
              {t(lang, 'home.quota.remaining').replace('{{used}}', String(levelCheckRemaining)).replace('{{limit}}', String(levelCheckLimit))}
            </p>
          ) : (
            <p class="text-sm text-red-500 font-medium mb-4">
              {t(lang, 'home.quota.exhausted')}
            </p>
          )}
          <a href="/level-check" class="inline-flex items-center gap-1 text-orange-500 font-semibold hover:text-orange-600 transition-colors">
            {t(lang, 'home.learn.levelCheck.cta')} ‚Üí
          </a>
        </div>

        <!-- AI Workbook -->
        <div class="bg-white border border-gray-200 rounded-2xl p-8 shadow-sm hover:shadow-md hover:border-teal-300 transition-all">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-14 h-14 bg-teal-50 border border-teal-200 rounded-full flex items-center justify-center text-2xl">üìñ</div>
            <div>
              <h3 class="text-xl font-semibold text-gray-800">{t(lang, 'home.learn.workbook.title')}</h3>
              <span class="inline-block text-xs font-medium px-2 py-0.5 bg-orange-100 text-orange-700 rounded-full">{t(lang, 'home.learn.workbook.badge')}</span>
            </div>
          </div>
          <p class="text-gray-500 mb-4">
            {t(lang, 'home.learn.workbook.desc')}
          </p>
          {workbookRemaining > 0 ? (
            <p class="text-sm text-teal-600 font-medium mb-4">
              {t(lang, 'home.quota.remaining').replace('{{used}}', String(workbookRemaining)).replace('{{limit}}', String(workbookLimit))}
            </p>
          ) : (
            <p class="text-sm text-red-500 font-medium mb-4">
              {t(lang, 'home.quota.exhausted')}
            </p>
          )}
          <a href="/workbook" class="inline-flex items-center gap-1 text-orange-500 font-semibold hover:text-orange-600 transition-colors">
            {t(lang, 'home.learn.workbook.cta')} ‚Üí
          </a>
        </div>
      </div>

      <!-- Reset note -->
      <p class="text-center text-xs text-gray-400 mt-6">
        {t(lang, 'home.quota.resetNote')}
      </p>
    </div>
  </section>

  <!-- Section 3: Practice ‚Äî Community & Voice -->
  <section class="py-20 px-4 bg-white">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-3xl font-bold text-center mb-12 text-gray-800">
        <span class="border-b-4 border-teal-400 pb-2">{t(lang, 'home.practice.title')}</span>
      </h2>

      <div class="grid md:grid-cols-2 gap-8">
        <!-- Community -->
        <div class="bg-white border border-gray-200 rounded-2xl p-8 shadow-sm hover:shadow-md hover:border-teal-300 transition-all">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-14 h-14 bg-teal-50 border border-teal-200 rounded-full flex items-center justify-center text-2xl">üåè</div>
            <div>
              <h3 class="text-xl font-semibold text-gray-800">{t(lang, 'home.practice.community.title')}</h3>
              <span class="inline-block text-xs font-medium px-2 py-0.5 bg-teal-100 text-teal-700 rounded-full">{t(lang, 'home.practice.community.badge')}</span>
            </div>
          </div>
          <p class="text-gray-500 mb-6">
            {t(lang, 'home.practice.community.desc')}
          </p>
          <a href="/community" class="inline-flex items-center gap-1 text-orange-500 font-semibold hover:text-orange-600 transition-colors">
            {t(lang, 'home.practice.community.cta')} ‚Üí
          </a>
        </div>

        <!-- Voice Lounge -->
        <div class="bg-white border border-gray-200 rounded-2xl p-8 shadow-sm hover:shadow-md hover:border-teal-300 transition-all">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-14 h-14 bg-teal-50 border border-teal-200 rounded-full flex items-center justify-center text-2xl">üé§</div>
            <div>
              <h3 class="text-xl font-semibold text-gray-800">{t(lang, 'home.practice.voiceLounge.title')}</h3>
            </div>
          </div>
          <p class="text-gray-500 mb-6">
            {t(lang, 'home.practice.voiceLounge.desc')}
          </p>
          <a href="/voice-lounge" class="inline-flex items-center gap-1 text-orange-500 font-semibold hover:text-orange-600 transition-colors">
            {t(lang, 'home.practice.voiceLounge.cta')} ‚Üí
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Section 4: Premium CTA -->
  <section class="py-20 px-4 bg-gradient-to-br from-orange-50 to-teal-50">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-3xl font-bold mb-4 text-gray-800">{t(lang, 'home.premium.title')}</h2>
      <p class="text-lg text-gray-600 mb-8">
        {t(lang, 'home.premium.subtitle')}
      </p>

      <ul class="text-left max-w-md mx-auto space-y-3 mb-10">
        <li class="flex items-start gap-2 text-gray-700">
          <span class="text-teal-500 mt-0.5 flex-shrink-0">‚úì</span>
          {t(lang, 'home.premium.feature1')}
        </li>
        <li class="flex items-start gap-2 text-gray-700">
          <span class="text-teal-500 mt-0.5 flex-shrink-0">‚úì</span>
          {t(lang, 'home.premium.feature2')}
        </li>
        <li class="flex items-start gap-2 text-gray-700">
          <span class="text-teal-500 mt-0.5 flex-shrink-0">‚úì</span>
          {t(lang, 'home.premium.feature3')}
        </li>
        <li class="flex items-start gap-2 text-gray-700">
          <span class="text-teal-500 mt-0.5 flex-shrink-0">‚úì</span>
          {t(lang, 'home.premium.feature4')}
        </li>
      </ul>

      <a
        href="/community"
        class="inline-block px-8 py-4 bg-orange-500 text-white rounded-full font-semibold text-lg hover:bg-orange-600 transition-colors"
      >
        {t(lang, 'home.premium.cta')}
      </a>
    </div>
  </section>

  <!-- Section 5: Final CTA -->
  <section class="py-20 px-4">
    <div class="max-w-4xl mx-auto text-center bg-orange-50 rounded-3xl p-12 border border-orange-100 shadow-sm">
      <h2 class="text-3xl font-bold mb-4 text-gray-800">{t(lang, 'home.cta.title')}</h2>
      <p class="text-gray-600 mb-8">
        {t(lang, 'home.cta.subtitle')}
      </p>
      <a
        href="/level-check"
        class="inline-block px-8 py-4 bg-orange-500 text-white rounded-full font-semibold text-lg hover:bg-orange-600 transition-colors"
      >
        {t(lang, 'home.cta.button')}
      </a>
    </div>
  </section>
</Layout>
