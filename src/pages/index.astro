---
import Layout from '../layouts/Layout.astro';
import { t } from '../i18n/index';
import type { Lang } from '../i18n/index';

const user = Astro.locals.user;
const lang = Astro.locals.lang as Lang;
---

<Layout title="Home" user={user}>
  <!-- Hero Section -->
  <section class="min-h-[80vh] flex items-center justify-center px-4">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-5xl md:text-7xl font-bold mb-6">
        <span class="text-orange-500">
          {t(lang, 'home.hero.title1')}
        </span>
        <br />
        <span class="text-gray-800">{t(lang, 'home.hero.title2')}</span>
      </h1>

      <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
        {t(lang, 'home.hero.subtitle')}
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/level-check"
          class="px-8 py-4 bg-orange-500 text-white rounded-full font-semibold text-lg hover:bg-orange-600 transition-colors"
        >
          {t(lang, 'home.hero.ctaLevel')}
        </a>
        <a
          href="/resources"
          class="px-8 py-4 border border-orange-500 text-orange-500 rounded-full font-semibold text-lg hover:bg-orange-50 transition-colors"
        >
          {t(lang, 'home.hero.ctaResources')}
        </a>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 px-4 bg-orange-50 relative overflow-hidden">
    <div class="absolute -top-10 -left-10 w-48 h-48 bg-teal-200 rounded-full opacity-20 pointer-events-none"></div>
    <div class="absolute -bottom-10 -right-10 w-64 h-64 bg-teal-100 rounded-full opacity-25 pointer-events-none"></div>
    <div class="max-w-6xl mx-auto relative z-10">
      <h2 class="text-3xl font-bold text-center mb-12 text-gray-800">
        <span class="border-b-4 border-teal-400 pb-2">{t(lang, 'home.features.title')}</span>
      </h2>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <!-- Feature 1 -->
        <div class="bg-white border border-gray-200 rounded-2xl p-6 shadow-sm hover:shadow-md hover:border-teal-300 transition-all">
          <div class="w-14 h-14 bg-teal-50 border border-teal-200 rounded-full flex items-center justify-center text-2xl mb-4">üé§</div>
          <h3 class="text-xl font-semibold mb-2 text-gray-800">{t(lang, 'home.features.levelCheck.title')}</h3>
          <p class="text-gray-500">
            {t(lang, 'home.features.levelCheck.desc')}
          </p>
        </div>

        <!-- Feature 2 -->
        <div class="bg-white border border-gray-200 rounded-2xl p-6 shadow-sm hover:shadow-md hover:border-teal-300 transition-all">
          <div class="w-14 h-14 bg-teal-50 border border-teal-200 rounded-full flex items-center justify-center text-2xl mb-4">üìö</div>
          <h3 class="text-xl font-semibold mb-2 text-gray-800">{t(lang, 'home.features.resources.title')}</h3>
          <p class="text-gray-500">
            {t(lang, 'home.features.resources.desc')}
          </p>
        </div>

        <!-- Feature 3: Workbook -->
        <div class="bg-white border border-gray-200 rounded-2xl p-6 shadow-sm hover:shadow-md hover:border-teal-300 transition-all">
          <div class="w-14 h-14 bg-teal-50 border border-teal-200 rounded-full flex items-center justify-center text-2xl mb-4">üìñ</div>
          <h3 class="text-xl font-semibold mb-2 text-gray-800">{t(lang, 'home.features.workbook.title')}</h3>
          <p class="text-gray-500">
            {t(lang, 'home.features.workbook.desc')}
          </p>
          <span class="inline-block mt-2 text-xs font-medium px-2 py-1 bg-teal-100 text-teal-600 rounded-full">{t(lang, 'home.features.workbook.premium')}</span>
        </div>

        <!-- Feature 4 -->
        <div class="bg-white border border-gray-200 rounded-2xl p-6 shadow-sm hover:shadow-md hover:border-teal-300 transition-all">
          <div class="w-14 h-14 bg-teal-50 border border-teal-200 rounded-full flex items-center justify-center text-2xl mb-4">üåè</div>
          <h3 class="text-xl font-semibold mb-2 text-gray-800">{t(lang, 'home.features.community.title')}</h3>
          <p class="text-gray-500">
            {t(lang, 'home.features.community.desc')}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 px-4">
    <div class="max-w-4xl mx-auto text-center bg-orange-50 rounded-3xl p-12 border border-orange-100 shadow-sm">
      <h2 class="text-3xl font-bold mb-4 text-gray-800">{t(lang, 'home.cta.title')}</h2>
      <p class="text-gray-600 mb-8">
        {t(lang, 'home.cta.subtitle')}
      </p>
      <a
        href="/level-check"
        class="inline-block px-8 py-4 bg-orange-500 text-white rounded-full font-semibold text-lg hover:bg-orange-600 transition-colors"
      >
        {t(lang, 'home.cta.button')}
      </a>
    </div>
  </section>
</Layout>
