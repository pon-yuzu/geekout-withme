---
import Layout from '../layouts/Layout.astro';
import { t } from '../i18n/index';
import type { Lang } from '../i18n/index';
import { DAILY_LIMITS } from '../lib/quota';
import { isPromoActive } from '../lib/promo';

const user = Astro.locals.user;
const lang = Astro.locals.lang as Lang;

// Fetch daily usage for quota display
let levelCheckUsed = 0;
let workbookUsed = 0;
const supabase = Astro.locals.supabase;
if (supabase) {
  try {
    const { data } = await supabase.rpc('get_daily_usage');
    const row = Array.isArray(data) ? data[0] : data;
    levelCheckUsed = row?.level_check ?? 0;
    workbookUsed = row?.workbook ?? 0;
  } catch {}
}
const levelCheckLimit = DAILY_LIMITS.level_check;
const workbookLimit = DAILY_LIMITS.workbook;
const levelCheckRemaining = Math.max(0, levelCheckLimit - levelCheckUsed);
const workbookRemaining = Math.max(0, workbookLimit - workbookUsed);
const promoActive = isPromoActive();
