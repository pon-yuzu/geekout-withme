---
import Layout from '../layouts/Layout.astro';
import VoiceLounge from '../components/voice-lounge/VoiceLounge.tsx';
import { t } from '../i18n/index';
import type { Lang } from '../i18n/index';

const user = Astro.locals.user;
const lang = Astro.locals.lang as Lang;
if (!user) return Astro.redirect('/login');

// Check premium status
let isPremium = false;
if (Astro.locals.supabase) {
  const supabase = Astro.locals.supabase;
  const { data: subscriptions } = await supabase
    .from('subscriptions')
    .select('status')
    .eq('user_id', user.id)
    .eq('status', 'active')
    .limit(1);
  isPremium = (subscriptions?.length ?? 0) > 0;
}
---

<Layout title={t(lang, 'voiceLounge.title')} user={user}>
  <section class="py-12 px-4">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">
          <span class="text-orange-500">
            {t(lang, 'voiceLounge.title')}
          </span>
        </h1>
        <p class="text-xl text-gray-600">
          {t(lang, 'voiceLounge.subtitle')}
        </p>
      </div>

      {isPremium ? (
        <VoiceLounge
          client:load
          userId={user.id}
          userName={user.user_metadata?.display_name || user.email || 'User'}
        />
      ) : (
        <div class="text-center py-12 bg-white border border-gray-200 rounded-2xl p-8 shadow-sm">
          <div class="text-4xl mb-4">&#10024;</div>
          <h3 class="text-xl font-medium mb-2 text-gray-800">{t(lang, 'voiceLounge.premium.title')}</h3>
          <p class="text-gray-500 mb-6">
            {t(lang, 'voiceLounge.premium.desc')}
          </p>
          <a
            href="/community"
            class="inline-block px-6 py-3 bg-orange-500 text-white rounded-full font-semibold hover:bg-orange-600 transition-colors"
          >
            {t(lang, 'voiceLounge.premium.button')}
          </a>
        </div>
      )}
    </div>
  </section>
</Layout>
