---
import Layout from '../layouts/Layout.astro';
import VoiceLounge from '../components/voice-lounge/VoiceLounge.tsx';
import { t } from '../i18n/index';
import type { Lang } from '../i18n/index';
import { isPromoActive } from '../lib/promo';

const user = Astro.locals.user;
const lang = Astro.locals.lang as Lang;
const promoActive = isPromoActive();

if (!user && !promoActive) return Astro.redirect('/login');

// Check premium status
let isPremium = false;
if (user && Astro.locals.supabase) {
  const supabase = Astro.locals.supabase;
  const { data: subscriptions } = await supabase
    .from('subscriptions')
    .select('status')
    .eq('user_id', user.id)
    .in('status', ['active', 'trialing'])
    .limit(1);
  isPremium = (subscriptions?.length ?? 0) > 0;
}

// During promo, logged-in users get premium access
if (promoActive && user) isPremium = true;

// Get conversation level from latest assessment
let autoLevel: 'beginner' | 'intermediate' | 'advanced' | null = null;
if (isPremium && user && Astro.locals.supabase) {
  try {
    const { data: assessment } = await Astro.locals.supabase
      .from('assessment_results')
      .select('text_level')
      .eq('user_id', user.id)
      .order('created_at', { ascending: false })
      .limit(1)
      .single();

    if (assessment?.text_level) {
      const level = assessment.text_level as string;
      // Map CEFR/JLPT to conversation level
      if (['A1', 'A2', 'N5', 'N4'].includes(level)) autoLevel = 'beginner';
      else if (['B1', 'B2', 'N3', 'N2'].includes(level)) autoLevel = 'intermediate';
      else if (['C1', 'C2', 'N1'].includes(level)) autoLevel = 'advanced';
    }
  } catch {
    // No assessment found
  }
}
---

<Layout title={t(lang, 'voiceLounge.title')} user={user}>
  <section class="py-12 px-4">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">
          <span class="text-orange-500">
            {t(lang, 'voiceLounge.title')}
          </span>
        </h1>
        <p class="text-xl text-gray-600">
          {t(lang, 'voiceLounge.subtitle')}
        </p>
      </div>

      {isPremium ? (
        <VoiceLounge
          client:load
          userId={user.id}
          userName={user.user_metadata?.display_name || user.email || 'User'}
          isPremium={isPremium}
          autoLevel={autoLevel}
        />
      ) : promoActive && !user ? (
        <div class="text-center py-12 bg-gradient-to-br from-orange-50 to-amber-50 border border-orange-200 rounded-2xl p-8 shadow-sm">
          <div class="text-5xl mb-4">ðŸŽ‰</div>
          <h3 class="text-xl font-semibold mb-2 text-gray-800">{t(lang, 'promo.signupCta')}</h3>
          <a
            href="/signup"
            class="inline-block mt-4 px-8 py-3 bg-orange-500 text-white rounded-full font-semibold hover:bg-orange-600 transition-colors"
          >
            {t(lang, 'promo.signupBtn')}
          </a>
        </div>
      ) : (
        <div class="text-center py-12 bg-white border border-gray-200 rounded-2xl p-8 shadow-sm">
          <div class="text-4xl mb-4">&#10024;</div>
          <h3 class="text-xl font-medium mb-2 text-gray-800">{t(lang, 'voiceLounge.premium.title')}</h3>
          <p class="text-gray-500 mb-6">
            {t(lang, 'voiceLounge.premium.desc')}
          </p>
          <a
            href="/community"
            class="inline-block px-6 py-3 bg-orange-500 text-white rounded-full font-semibold hover:bg-orange-600 transition-colors"
          >
            {t(lang, 'voiceLounge.premium.button')}
          </a>
        </div>
      )}
    </div>
  </section>
</Layout>
