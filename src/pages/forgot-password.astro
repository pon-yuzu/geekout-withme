---
import Layout from '../layouts/Layout.astro';
import ForgotPasswordForm from '../components/auth/ForgotPasswordForm.tsx';

const user = Astro.locals.user;
if (user) return Astro.redirect('/');
---

<Layout title="Forgot Password" user={user}>
  <section class="min-h-[80vh] flex items-center justify-center px-4">
    <div class="w-full max-w-md">
      <ForgotPasswordForm client:load />
    </div>
  </section>
</Layout>
