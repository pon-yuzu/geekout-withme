---
import Layout from '../layouts/Layout.astro';
import PricingCard from '../components/PricingCard.tsx';
import { t } from '../i18n/index';
import type { Lang } from '../i18n/index';

const user = Astro.locals.user;
const lang = Astro.locals.lang as Lang;
let isPremium = false;
if (user && Astro.locals.supabase) {
  const supabase = Astro.locals.supabase;
  const { data } = await supabase
    .from('subscriptions')
    .select('status')
    .eq('user_id', user.id)
    .eq('status', 'active')
    .limit(1);
  isPremium = (data?.length ?? 0) > 0;
}

// Fetch latest YouTube video from RSS feed
const YT_CHANNEL_ID = 'UCQGr0AXdkMqqMV05xvYsq4g';
let latestVideo: { id: string; title: string; thumbnail: string } | null = null;
try {
  const rss = await fetch(`https://www.youtube.com/feeds/videos.xml?channel_id=${YT_CHANNEL_ID}`, {
    headers: { 'User-Agent': 'Mozilla/5.0' },
  });
  const xml = await rss.text();
  const videoIdMatch = xml.match(/<yt:videoId>([^<]+)<\/yt:videoId>/);
  const titleMatch = xml.match(/<entry>[\s\S]*?<title>([^<]+)<\/title>/);
  if (videoIdMatch) {
    latestVideo = {
      id: videoIdMatch[1],
      title: titleMatch?.[1] ?? '',
      thumbnail: `https://i.ytimg.com/vi/${videoIdMatch[1]}/hqdefault.jpg`,
    };
  }
} catch {
  // RSS fetch failed ‚Äî show YouTube section without embed
}
---

