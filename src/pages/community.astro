---
import Layout from '../layouts/Layout.astro';
import PricingCard from '../components/PricingCard.tsx';
import { t } from '../i18n/index';
import type { Lang } from '../i18n/index';

const user = Astro.locals.user;
const lang = Astro.locals.lang as Lang;
let isPremium = false;
if (user && Astro.locals.supabase) {
  const supabase = Astro.locals.supabase;
  const { data } = await supabase
    .from('subscriptions')
    .select('status')
    .eq('user_id', user.id)
    .in('status', ['active', 'trialing'])
    .limit(1);
  isPremium = (data?.length ?? 0) > 0;
}

---

<Layout title={t(lang, 'nav.community')} description="Join our language exchange community and connect with fellow learners." user={user}>
  <section class="py-12 px-4">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">
          <span class="text-orange-500">
            {t(lang, 'community.title')}
          </span>
        </h1>
        <p class="text-xl text-gray-600">
          {t(lang, 'community.subtitle')}
        </p>
      </div>

      <!-- Free Tier: Chat'n'Chill -->
      <div class="bg-white border border-gray-200 rounded-2xl p-8 mb-8 shadow-sm">
        <div class="flex items-center gap-3 mb-4">
          <span class="text-3xl">üåè</span>
          <div>
            <h2 class="text-2xl font-bold text-gray-800">{t(lang, 'community.exchange.title')}</h2>
            <span class="text-orange-500 font-semibold">{t(lang, 'community.exchange.free')}</span>
          </div>
        </div>

        <p class="text-gray-600 mb-6">
          {t(lang, 'community.exchange.desc')}
        </p>

        <ul class="space-y-3 mb-8">
          <li class="flex items-center gap-3">
            <span class="text-teal-500">‚úì</span>
            <span class="text-gray-700">{t(lang, 'community.exchange.features.zoom')}</span>
          </li>
          <li class="flex items-center gap-3">
            <span class="text-teal-500">‚úì</span>
            <span class="text-gray-700">{t(lang, 'community.exchange.features.mixed')}</span>
          </li>
          <li class="flex items-center gap-3">
            <span class="text-teal-500">‚úì</span>
            <span class="text-gray-700">{t(lang, 'community.exchange.features.speakers')}</span>
          </li>
          <li class="flex items-center gap-3">
            <span class="text-teal-500">‚úì</span>
            <span class="text-gray-700">{t(lang, 'community.exchange.features.topics')}</span>
          </li>
        </ul>

        <!-- How to Join -->
        <div class="bg-orange-50 rounded-xl p-6 mb-6">
          <h3 class="text-lg font-bold text-gray-800 mb-4">{t(lang, 'community.exchange.howTo.title')}</h3>
          <ol class="space-y-4">
            <li class="flex items-start gap-3">
              <span class="flex-shrink-0 w-7 h-7 bg-teal-500 text-white rounded-full flex items-center justify-center text-sm font-bold">1</span>
              <span class="text-gray-700 pt-0.5">{t(lang, 'community.exchange.howTo.step1')}</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="flex-shrink-0 w-7 h-7 bg-teal-500 text-white rounded-full flex items-center justify-center text-sm font-bold">2</span>
              <div class="pt-0.5">
                <span class="text-gray-700">{t(lang, 'community.exchange.howTo.step2')}</span>
                <div class="mt-2 flex items-center gap-2">
                  <code class="px-4 py-2 bg-white border-2 border-orange-300 rounded-lg text-orange-600 font-bold text-lg" id="phrase">Chat'n'Chill</code>
                  <button
                    id="copy-btn"
                    class="px-3 py-2 bg-orange-500 text-white rounded-lg text-sm font-medium hover:bg-orange-600 transition-colors"
                    data-copied-text={t(lang, 'community.exchange.howTo.copied')}
                  >
                    Copy
                  </button>
                </div>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <span class="flex-shrink-0 w-7 h-7 bg-teal-500 text-white rounded-full flex items-center justify-center text-sm font-bold">3</span>
              <span class="text-gray-700 pt-0.5">{t(lang, 'community.exchange.howTo.step3')}</span>
            </li>
          </ol>
        </div>

        <!-- Instagram link + QR -->
        <div class="flex flex-col sm:flex-row items-center gap-6">
          <a
            href="https://www.instagram.com/rebellious1124/"
            target="_blank"
            rel="noopener"
            class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-orange-500 via-pink-500 to-purple-500 text-white rounded-full font-semibold hover:opacity-90 transition-opacity"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
            {t(lang, 'community.exchange.button')}
          </a>
          <a
            href="https://www.instagram.com/rebellious1124/"
            target="_blank"
            rel="noopener"
            class="block"
          >
            <img src="/instagram-qr.png" alt="@rebellious1124 QR code" class="w-32 h-32 rounded-lg" />
          </a>
        </div>
      </div>

      <!-- Premium Tier -->
      <div class="mb-8">
        <PricingCard client:load isLoggedIn={!!user} isPremium={isPremium} />
      </div>

      <!-- Rules Reminder -->
      <div class="mt-12 text-center text-gray-500 text-sm">
        <p class="mb-2">
          {t(lang, 'community.rules.title')}
        </p>
        <p>
          {t(lang, 'community.rules.text')}
        </p>
      </div>
    </div>
  </section>

  <script>
    const btn = document.getElementById('copy-btn');
    if (btn) {
      btn.addEventListener('click', async () => {
        await navigator.clipboard.writeText('Chat\'n\'Chill');
        const original = btn.textContent;
        btn.textContent = btn.dataset.copiedText || 'Copied!';
        btn.classList.replace('bg-orange-500', 'bg-green-500');
        btn.classList.replace('hover:bg-orange-600', 'hover:bg-green-600');
        setTimeout(() => {
          btn.textContent = original;
          btn.classList.replace('bg-green-500', 'bg-orange-500');
          btn.classList.replace('hover:bg-green-600', 'hover:bg-orange-600');
        }, 2000);
      });
    }
  </script>
</Layout>
