---
import Layout from '../layouts/Layout.astro';
import ConversationCardsStandalone from '../components/ConversationCardsStandalone';
import { t } from '../i18n/index';
import type { Lang } from '../i18n/index';

const user = Astro.locals.user;
const lang = Astro.locals.lang as Lang;

// Access tier determination
type AccessTier = 'anonymous' | 'free' | 'premium';
let accessTier: AccessTier = 'anonymous';

// Auto-detect level from assessment (if logged in)
let autoLevel: 'beginner' | 'intermediate' | 'advanced' | null = null;
if (user && Astro.locals.supabase) {
  accessTier = 'free';

  // Premium check
  const { data: subs } = await Astro.locals.supabase
    .from('subscriptions')
    .select('status')
    .eq('user_id', user.id)
    .in('status', ['active', 'trialing'])
    .limit(1);
  if (subs?.length) accessTier = 'premium';

  try {
    const { data: assessment } = await Astro.locals.supabase
      .from('assessment_results')
      .select('text_level')
      .eq('user_id', user.id)
      .order('created_at', { ascending: false })
      .limit(1)
      .single();

    if (assessment?.text_level) {
      const level = assessment.text_level as string;
      if (['A1', 'A2', 'N5', 'N4'].includes(level)) autoLevel = 'beginner';
      else if (['B1', 'B2', 'N3', 'N2'].includes(level)) autoLevel = 'intermediate';
      else if (['C1', 'C2', 'N1'].includes(level)) autoLevel = 'advanced';
    }
  } catch {
    // No assessment found
  }
}
---

<Layout title={t(lang, 'convCards.title')} user={user}>
  <section class="py-12 px-4">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-10">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">
          <span class="text-orange-500">
            {t(lang, 'convCards.title')}
          </span>
        </h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          {t(lang, 'convCards.subtitle')}
        </p>
      </div>

      <ConversationCardsStandalone
        client:load
        autoLevel={autoLevel}
        lang={lang}
        accessTier={accessTier}
      />

      {/* Voice Lounge CTA â€” premium: full CTA, free: upgrade CTA, anonymous: hidden */}
      {accessTier === 'premium' && (
        <div class="mt-10 text-center bg-orange-50 rounded-2xl p-8 border border-orange-100 shadow-sm">
          <p class="text-gray-600 mb-4">
            {t(lang, 'convCards.cta.text')}
          </p>
          <a
            href="/voice-lounge"
            class="inline-block px-6 py-3 bg-orange-500 text-white rounded-full font-semibold hover:bg-orange-600 transition-colors"
          >
            {t(lang, 'convCards.cta.button')}
          </a>
        </div>
      )}
      {accessTier === 'free' && (
        <div class="mt-10 text-center bg-orange-50 rounded-2xl p-8 border border-orange-100 shadow-sm">
          <p class="text-gray-600 mb-4">
            {t(lang, 'convCards.free.upgradeCta')}
          </p>
          <a
            href="/pricing"
            class="inline-block px-6 py-3 bg-orange-500 text-white rounded-full font-semibold hover:bg-orange-600 transition-colors"
          >
            {t(lang, 'convCards.free.upgradeBtn')}
          </a>
        </div>
      )}
    </div>
  </section>
</Layout>
